{% extends 'base.html.twig' %}

{% block title %}Movie{% endblock %}

{% block body %}
    <h1>Movie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ movie.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ movie.title }}</td>
            </tr>
            <tr>
                <th>ShortDescription</th>
                <td>{{ movie.shortDescription }}</td>
            </tr>
            <tr>
                <th>LongDescription</th>
                <td>{{ movie.longDescription }}</td>
            </tr>
            <tr>
                <th>ReleaseDate</th>
                <td>{{ movie.releaseDate ? movie.releaseDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>CoverImage</th>
                <td>{{ movie.coverImage }}</td>
            </tr>
            <tr>
                <th>Staff</th>
                <td>{{ movie.staff ? movie.staff|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Casting</th>
                <td>{{ movie.casting ? movie.casting|json_encode : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_movie_index') }}">back to list</a>

    <a href="{{ path('app_movie_edit', {'id': movie.id}) }}">edit</a>

    {{ include('movie/_delete_form.html.twig') }}
{% endblock %}
